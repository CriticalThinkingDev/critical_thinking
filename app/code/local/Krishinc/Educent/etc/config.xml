<config>
    <modules>
        <Krishinc_Educent>
            <version>0.1.0</version>
        </Krishinc_Educent>
    </modules>
    <frontend>
        <routers>
            <educent>
                <use>standard</use>
                <args>
                    <module>Krishinc_Educent</module>
                    <frontName>educent</frontName>
                </args>
            </educent>
        </routers>
        <layout>
            <updates>
                <educent>
                    <file>educent.xml</file>
                </educent>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<educent>
				<use>admin</use>
				<args>
					<module>Krishinc_Educent</module>
					<frontName>educent</frontName>
				</args>
			</educent>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<educent module="educent">
				<title>Educent</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="educent">
						<title>Log</title>
						<sort_order>0</sort_order>
						<action>educent/adminhtml_educent</action>
					</items>
				</children>
			</educent>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Krishinc_Educent>
							<title>Educent Module</title>
							<sort_order>10</sort_order>
						</Krishinc_Educent>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<educent>
					<file>educent.xml</file>
				</educent>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <educent>
                <class>Krishinc_Educent_Model</class>
                <resourceModel>educent_mysql4</resourceModel>
            </educent>
            <educent_mysql4>
                <class>Krishinc_Educent_Model_Mysql4</class>
                <entities>
                    <educent>
                        <table>educent</table>
                    </educent>
                </entities>
            </educent_mysql4>
        </models>
        <resources>
            <educent_setup>
                <setup>
                    <module>Krishinc_Educent</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </educent_setup>
            <educent_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </educent_write>
            <educent_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </educent_read>
        </resources>
        <blocks>
            <educent>
                <class>Krishinc_Educent_Block</class>
            </educent>
        </blocks>
        <helpers>
            <educent>
                <class>Krishinc_Educent_Helper</class>
            </educent>
        </helpers>
    </global>
    <crontab>
        <jobs>
            <ktpl_educent>
                <schedule>
                    <cron_expr>5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>educent/cron::import</model>
                </run>
            </ktpl_educent>
 <ktpl_educent_cron>
                <schedule>
                    <cron_expr>0 17 * * *</cron_expr>
                </schedule>
                <run>
                    <model>educent/cron::createshipment</model>
                </run>
            </ktpl_educent_cron>
        </jobs>
    </crontab>
</config>
