<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <catalog>
            <groups>
			 	<catalogue translate="label"  >
                    <label>Add 0 price product on all sales order</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>9900</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<enabled translate="label">
                            <label>Enable 0 price product </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <catalogue_choose>
                            <label>Choose catalogue product depend on month</label>
                            <frontend_model>catalogue/adminhtml_system_config_form_field_date</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model> 
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>  
                            <comment><![CDATA[NOTE: Select Month from Month field, For "Product" field only products with sku %ITO% will be shown under product dropdown.]]></comment>	 
						</catalogue_choose>
					</fields>
				</catalogue>
			</groups>
		</catalog>
	</sections>
</config>