<?xml version="1.0"?>
<config>
    <modules>
        <Krishinc_Catalogrequest>
            <version>0.1.5</version>
        </Krishinc_Catalogrequest>
    </modules>
    <frontend>
        <routers>
            <catalogrequest>
                <use>standard</use>
                <args>
                    <module>Krishinc_Catalogrequest</module>
                    <frontName>catalogrequest</frontName>
                </args>
            </catalogrequest>
        </routers>
        <layout>
            <updates>
                <catalogrequest>
                    <file>catalogrequest.xml</file>
                </catalogrequest>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<catalogrequest>
				<use>admin</use>
				<args>
					<module>Krishinc_Catalogrequest</module>
					<frontName>catalogrequest</frontName>
				</args>
			</catalogrequest>
        </routers>
    </admin>
    <adminhtml>
		<menu> 
			<customer>
				<children>
					<catalogrequest>
						<title>Catalog Requests</title>
						<sort_order>103</sort_order>
						<action>catalogrequest/adminhtml_catalogrequest</action>
					</catalogrequest>
				</children>
			</customer>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<customer>
							<children>
								<catalogrequest>
									<title>Catalogrequest Module</title>
									<sort_order>103</sort_order>
								</catalogrequest>
							</children>
						</customer>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<catalogrequest>
					<file>catalogrequest.xml</file>
				</catalogrequest>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <catalogrequest>
                <class>Krishinc_Catalogrequest_Model</class>
                <resourceModel>catalogrequest_mysql4</resourceModel>
            </catalogrequest>
            <catalogrequest_mysql4>
                <class>Krishinc_Catalogrequest_Model_Mysql4</class>
                <entities>
                    <catalogrequest>
                        <table>catalogrequest</table>
                    </catalogrequest>
                </entities>
            </catalogrequest_mysql4>
        </models>
        <resources>
            <catalogrequest_setup>
                <setup>
                    <module>Krishinc_Catalogrequest</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </catalogrequest_setup>
            <catalogrequest_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </catalogrequest_write>
            <catalogrequest_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </catalogrequest_read>
        </resources>
        <blocks>
            <catalogrequest>
                <class>Krishinc_Catalogrequest_Block</class>
            </catalogrequest>
        </blocks>
        <helpers>
            <catalogrequest>
                <class>Krishinc_Catalogrequest_Helper</class>
            </catalogrequest>
        </helpers>
    </global>
</config>