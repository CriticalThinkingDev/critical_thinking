<layout>
<!-- For Componentsold link tab-->
   <adminhtml_catalog_product_componentsold> 
	    <block type="core/text_list" name="root">
	        <block type="customlinks/adminhtml_catalog_product_edit_tab_componentsold" name="catalog.product.edit.tab.componentsold"/>
	        <block type="adminhtml/widget_grid_serializer" name="upsell_grid_serializer">
	            <reference name="upsell_grid_serializer">
	                <action method="initSerializerBlock">
	                    <grid_block_name>catalog.product.edit.tab.componentsold</grid_block_name>
	                    <data_callback>getSelectedComponentsoldProducts</data_callback>
	                    <hidden_input_name>links[componentsold]</hidden_input_name>
	                    <reload_param_name>products_componentsold</reload_param_name>
	                </action>
	                <action method="addColumnInputName">
	                    <input_name>position</input_name>
	                </action>
	            </reference>
	        </block>
	    </block>
	</adminhtml_catalog_product_componentsold>
	
